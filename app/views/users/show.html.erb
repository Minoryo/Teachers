<h1>教師詳細ページ</h1>
名前:<%= @teacher.name %>
<div class="">
  <p><b>評価</b><%= adjust_decimal @average %>/5</p>
</div>
<div class="">


  <%= form_for @new_micropost do |f| %>
    <div class="field">
      <%= f.text_area :content, placeholder: "コメント欄" %>
    </div>
    <%= f.submit "POST", class: "btn btn-large btn-primary" %>
  <% end %>


  <h2>コメント</h2>
  <% @microposts.each do |micropost| %>
     <p><%= micropost.content %></p>
  <% end %>


</div>
